<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <!--<item name="colorAccent">@color/darker_yellow</item>-->
    </style>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.TimeEntry.Button.Confirm" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#4caf50</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TimeEntry.Button.Delete" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#ff5252</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
